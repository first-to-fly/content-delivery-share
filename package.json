{
  "name": "myawesomeproject",
  "version": "0.0.1",
  "private": true,
  "description": "Some description.",
  "author": {
    "name": "NAB Studio"
  },
  "main": "build",
  "files": [
    "build/*"
  ],
  "scripts": {
    "postinstall": "(npm_config_yes=true npx patch-package || true) && echo",
    "ts-node": "TS_NODE_PROJECT=./tsconfig.json TS_NODE_TRANSPILE_ONLY=true node --inspect=localhost:${NODE_DEBUG_PORT:-9229} --require ts-node/register --require tsconfig-paths/register",
    "dev:nodemon": "nodemon ./src/index.ts",
    "dev": "npm run dev:nodemon",
    "build:tsc-declaration": "tsc --allowJs true --checkJs false --declaration",
    "build:tsc": "tsc",
    "build": "concurrently --kill-others-on-fail --names \"tsc-declaration,tsc\" \"npm run build:tsc-declaration\" \"npm run build:tsc\"",
    "start:node": "NODE_PATH=./build node ./build",
    "start": "npm run start:node",
    "lint:eslint": "eslint --ignore-pattern \"submodules/**\" --ignore-pattern \"src/@nabstudio/**\" --ignore-pattern \"example/**\" \"./**/*.{js,jsx,ts,tsx}\"",
    "lint:tsc": "tsc --project ./tsconfig.lint.json --noEmit",
    "lint:madge": "madge --circular --no-spinner $(find ./src -type f | grep '\\.\\(ts\\|tsx\\|js\\|jsx\\|mjs\\)$' | paste -sd ' ' -)",
    "lint:stylelint": "stylelint --allow-empty-input --ignore-pattern \"submodules/**\" --ignore-pattern \"src/@nabstudio/**\" \"./**/*.{css,less,scss,sss}\"",
    "lint": "concurrently --kill-others-on-fail --names \"eslint,tsc,madge,stylelint\" \"npm run lint:eslint\" \"npm run lint:tsc\" \"npm run lint:madge\" \"npm run lint:stylelint\"",
    "test:mocha": "TS_NODE_PROJECT=./tsconfig.test.json mocha --require ts-node/register --require tsconfig-paths/register \"./test/**/*\"",
    "test:cypress": "npm_config_yes=true npx cypress run",
    "test": "concurrently --kill-others-on-fail --names \"mocha,cypress\" \"npm run test:mocha\" \"npm run test:cypress\""
  },
  "repository": {},
  "license": "Apache",
  "dependencies": {
    "deepcopy": "^2.1.0"
  },
  "devDependencies": {
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.6.1",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "concurrently": "^6.2.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-css-modules": "^2.11.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-import": "2.23.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^1.1.1",
    "madge": "^4.0.2",
    "mocha": "^8.4.0",
    "nodemon": "^2.0.7",
    "prettier-eslint": "^12.0.0",
    "prettier-eslint-cli": "^5.0.1",
    "prettier-stylelint": "^0.4.2",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.19.0",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.2"
  }
}
