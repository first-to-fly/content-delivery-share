#!/usr/bin/env bash

source "./lib/bash/core.sh"

source "${BASH_SOURCE[0]%/*}/../lib/bash/node.sh"

function main() {

  if [[ ! -d "./node_modules" ]]; then
    "${BASH_SOURCE[0]%/*}/install"
  fi

  echo -e "${OK_COLOR}==> Debugging app..."

  NODE_DEBUG_PORT="${NODE_DEBUG_PORT:-9229}"
  (lsof -t -i ":${NODE_DEBUG_PORT}" || true) |
    xargs kill

  # Kill old processes
  # shellcheck disable=SC2009
  ps |
    grep --invert-match "grep" |
    (grep "nodemon" || true) |
    awk '{print $1}' |
    xargs kill

  loadEnvKey

  NPM="$(command -v npm)"

  (
    set -x
    "${NPM}" run dev "$@"
  )

}

main "$@"
