#!/usr/bin/env bash

# shellcheck disable=SC1090
source "$(dirname "${BASH_SOURCE[0]}")/lib/core.sh"

function main() {

  if [[ ! -d "./node_modules" ]]; then
    "$(dirname "${BASH_SOURCE[0]}")/install"
  fi

  echo -e "${OK_COLOR}==> Debugging app..."

  (
    set -x
    npm run dev
  )

}

prefix "$@"
main "$@"
suffix "$@"
