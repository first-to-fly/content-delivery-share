#!/usr/bin/env bash

source "./lib/bash/core.sh"

function main() {

  local COMMAND="${1:-}"

  if [[ -n "${COMMAND}" && "${COMMAND}" != "-"* ]]; then
    if ! command -v "${COMMAND}" >/dev/null; then
      echo "Command '${COMMAND}' not found." >&2
      exit 1
    fi
    shift
  else
    if [[ "${COMMAND}" == "--" ]]; then
      shift
    fi
    COMMAND=""
  fi

  if [[ -z "${COMMAND}" ]]; then
    COMMAND=(echo "Hello World")
  fi

  echo -e "${OK_COLOR}==> Debugging app..."

  (
    set -x
    "${COMMAND[@]}" "$@"
  )

}

main "$@"
