#!/usr/bin/env bash

# shellcheck source=./lib/bash/core.sh
source "${BASH_SOURCE[0]%/*}/../lib/bash/core.sh"

# shellcheck source=./lib/bash/node.sh
source "${BASH_SOURCE[0]%/*}/../lib/bash/node.sh"

function main() {

  echo -e "${OK_COLOR}==> Installing dependencies..."

  NPM="$(command -v npm)"

  (
    set -x
    "${NPM}" install \
      "$@"
  )

}

main "$@"
