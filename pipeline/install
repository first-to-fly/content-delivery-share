#!/usr/bin/env bash

source "${BASH_SOURCE[0]%/*}/../lib/bash/core.sh"

source "${BASH_SOURCE[0]%/*}/../lib/bash/node.sh"

function main() {

  echo -e "${OK_COLOR}==> Installing dependencies..."

  NPM="$(command -v npm)"

  (
    set -x
    # "--unsafe-perm" is required, else postinstall won't run during Docker build
    "${NPM}" install \
      --unsafe-perm \
      "$@"
  )

}

main "$@"
