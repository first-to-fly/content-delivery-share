#!/usr/bin/env bash

source "./lib/bash/core.sh"

dependency "shellcheck"

source "${BASH_SOURCE[0]%/*}/../lib/bash/node.sh"

function main() {

  if [[ ! -d "./node_modules" ]]; then
    "${BASH_SOURCE[0]%/*}/install"
  fi

  echo -e "${OK_COLOR}==> Linting code..."

  (
    set -x
    shellcheck \
      --external-sources \
      "./bin/"* \
      "./lib/bash/"* \
      "./pipeline/"*
  )

  NPM="$(command -v npm)"

  (
    set -x
    "${NPM}" run lint
  )

}

main "$@"
