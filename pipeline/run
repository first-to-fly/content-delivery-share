#!/usr/bin/env bash

export BOILERPLATE_NO_COLOR="true"
export BOILERPLATE_NO_EMPTY_LINE="true"

source "./lib/bash/core.sh"

function main() {

  local COMMAND="${1:-}"

  if [[ -n "${COMMAND}" && "${COMMAND}" != "-"* ]]; then
    if ! command -v "${COMMAND}" >/dev/null; then
      echo "Command '${COMMAND}' not found." >&2
      exit 1
    fi
    shift
  else
    if [[ "${COMMAND}" == "--" ]]; then
      shift
    fi
    COMMAND=""
  fi

  if [[ -z "${COMMAND}" ]]; then
    COMMAND=(echo "Hello World")
  fi

  echo -e "${OK_COLOR}==> Running app..."

  local PROJECT_KEY
  PROJECT_KEY="$(projectKey)"

  local LOG_FILE
  LOG_FILE="$(mktemp)"

  set +e
  (
    set -x
    time \
      BOILERPLATE_LOG_TIME="true" wrap \
      "${COMMAND[@]}" "$@" |
      tee "${LOG_FILE}"
  )
  local EXIT_CODE="$?"
  set -e

  echo
  echo "EXIT_CODE = ${EXIT_CODE}"

  # Codes:
  # - 0: success
  # - 130: killed in local by user (Ctrl+C)
  if [[ "${EXIT_CODE}" != 0 && "${EXIT_CODE}" != 130 ]]; then

    local DATA
    DATA="$(
      echo '{}' |
        jq \
          --compact-output \
          --arg projectKey "${PROJECT_KEY}" \
          --arg exitCode "${EXIT_CODE}" \
          --arg consoleLog "$(tail -50 <"${LOG_FILE}")" \
          '.main = {
            "attachments": [
              {
                "fallback": "<!channel> [\($projectKey)] crashed with exit code \($exitCode)",
                "color": "danger",
                "text": "<!channel> *`\($projectKey)`* crashed with exit code *\($exitCode)*.\n\n*Console Log*\n```\($consoleLog)```",
              }
            ]
          } | .main'
    )"
    # echo "DATA = '${DATA}'"

    (
      # set -x
      slack-send "${DATA}"
    )

  fi

  rm -rf "${LOG_FILE}"

  return "${EXIT_CODE}"
}

main "$@"
